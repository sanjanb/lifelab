---
/**
 * Base Layout Component
 * Main layout structure for all pages
 * 
 * MIGRATION NOTE: Converted from index.html
 * Now includes Svelte islands for interactivity
 */

import NavigationMenu from '../components/NavigationMenu.svelte';

interface Props {
  title?: string;
}

const { title = 'LifeLab - Personal Dashboard' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/lifelab/favicon.svg" />
    <link rel="stylesheet" href="/lifelab/styles/main.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <h1 class="header-title" id="header-title" style="cursor: pointer; display: flex; align-items: center; gap: 0.5rem;">
        <svg width="32" height="32" viewBox="0 0 128 128" style="margin-bottom: 2px;">
          <defs>
            <linearGradient id="headerIconGradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
              <stop offset="100%" style="stop-color:#2563eb;stop-opacity:1" />
            </linearGradient>
          </defs>
          <circle cx="64" cy="64" r="60" fill="url(#headerIconGradient)"/>
          <path d="M 20 64 L 35 64 L 42 50 L 49 78 L 56 64 L 64 64 L 71 52 L 78 76 L 85 64 L 108 64" 
            stroke="white" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" fill="none" opacity="0.9"/>
          <circle cx="35" cy="40" r="3" fill="white" opacity="0.7"/>
          <circle cx="64" cy="35" r="3" fill="white" opacity="0.7"/>
          <circle cx="93" cy="40" r="3" fill="white" opacity="0.7"/>
          <circle cx="85" cy="88" r="3" fill="white" opacity="0.7"/>
          <circle cx="43" cy="88" r="3" fill="white" opacity="0.7"/>
        </svg>
        LifeLab
      </h1>
    </header>

    <!-- Navigation -->
    <NavigationMenu client:load currentPath={Astro.url.pathname} />

    <!-- Main Content Area -->
    <main class="main" id="main">
      <slot />
    </main>
  </body>
</html>
