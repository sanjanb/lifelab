---
/**
 * Base Layout Component
 * Main layout structure for all pages
 * 
 * MIGRATION NOTE: Converted from index.html
 * Now includes Svelte islands for interactivity
 */

import NavigationMenu from '../components/NavigationMenu.svelte';

interface Props {
  title?: string;
}

const { title = 'LifeLab - Personal Dashboard' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/lifelab/styles/main.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <h1 class="header-title" id="header-title" style="cursor: pointer">
        LifeLab
      </h1>
    </header>

    <!-- Navigation -->
    <NavigationMenu client:load currentPath={Astro.url.pathname} />

    <!-- Main Content Area -->
    <main class="main" id="main">
      <slot />
    </main>
  </body>
</html>
