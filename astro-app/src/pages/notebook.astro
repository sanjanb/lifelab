---
/**
 * Monthly Notebook Page
 * Full month view with daily rows
 * 
 * MIGRATION NOTE: Phase M4.3 - Notebook with month navigation and reflection
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import DailyRowControls from '../components/DailyRowControls.svelte';
import DomainPresenceBadges from '../components/DomainPresenceBadges.svelte';
import NotebookMonthNavigation from '../components/NotebookMonthNavigation.svelte';
import MonthlyReflectionEditor from '../components/MonthlyReflectionEditor.svelte';
import MonthActionButtons from '../components/MonthActionButtons.svelte';
import { performNonDestructiveSync } from '../lib/notebookSync';
import { getMonthlyNotebook } from '../lib/storage';
import { formatMonthYear, getDaysInMonth } from '../lib/utils';

// Get month from URL query params or default to current month
const url = new URL(Astro.request.url);
const queryYear = url.searchParams.get('year');
const queryMonth = url.searchParams.get('month');

const now = new Date();
const year = queryYear ? parseInt(queryYear) : now.getFullYear();
const month = queryMonth ? parseInt(queryMonth) : now.getMonth() + 1;

// Note: This runs at build time, so we can't access localStorage
// The sync will happen client-side in components
const monthTitle = formatMonthYear(year, month);
const daysInMonth = getDaysInMonth(year, month);

// Create array of days for rendering
const days = Array.from({ length: daysInMonth }, (_, i) => ({
  dayNumber: i + 1,
  dayName: new Date(year, month - 1, i + 1).toLocaleDateString('en-US', { weekday: 'short' }),
  date: new Date(year, month - 1, i + 1).toISOString().split('T')[0]
}));
---

<BaseLayout title="LifeLab - Notebook">
  <div class="notebook-view">
    <!-- Notebook Header -->
    <div class="notebook-header">
      <div class="header-top">
        <div class="title-section">
          <h2 class="notebook-title">{monthTitle}</h2>
          <p class="notebook-subtitle">Monthly Notebook</p>
        </div>
        
        <NotebookMonthNavigation 
          client:load
          year={year}
          month={month}
        />
      </div>
      
      <div class="header-actions">
        <MonthActionButtons 
          client:load
          year={year}
          month={month}
          isClosed={false}
        />
      </div>

      <div class="header-info">
        <span class="sync-note">ðŸ’¡ Data syncs automatically from your domain entries</span>
      </div>
    </div>

    <!-- Daily Rows Grid -->
    <div class="daily-rows">
      <div class="grid-header">
        <div class="col-day">Day</div>
        <div class="col-controls">Intent / Quality / Outcome</div>
        <div class="col-domains">Active Domains</div>
      </div>

      {days.map((day) => (
        <div class="day-row" data-day={day.dayNumber}>
          <div class="col-day">
            <div class="day-number">{day.dayNumber}</div>
            <div class="day-name">{day.dayName}</div>
          </div>

          <div class="col-controls">
            <DailyRowControls 
              client:visible
              year={year}
              month={month}
              dayNumber={day.dayNumber}
              initialData={{}}
            />
          </div>

          <div class="col-domains">
            <DomainPresenceBadges 
              client:visible
              dayNumber={day.dayNumber}
              activeDomains={[]}
            />
          </div>
        </div>
      ))}
    </div>

    <!-- Monthly Reflection -->
    <div class="monthly-reflection">
      <MonthlyReflectionEditor 
        client:visible
        year={year}
        month={month}
        initialReflection=""
      />
    </div>
  </div>
</BaseLayout>

<style>
  .notebook-view {
    max-width: 1200px;
    margin: 0 auto;
  }

  .notebook-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid #eee;
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 2rem;
  }

  .title-section {
    flex: 1;
  }

  .notebook-title {
    font-size: 2rem;
    margin: 0 0 0.5rem 0;
    color: #222;
  }

  .notebook-subtitle {
    color: #666;
    font-size: 1rem;
    margin: 0;
  }

  .header-actions {
    margin-bottom: 1rem;
  }

  .header-info {
    display: flex;
    gap: 1rem;
  }

  .sync-note {
    background: #e3f2fd;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
    color: #1976d2;
  }

  .daily-rows {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .grid-header {
    display: grid;
    grid-template-columns: 100px 1fr 200px;
    gap: 1rem;
    padding: 1rem;
    background: #f5f5f5;
    font-weight: 600;
    color: #555;
    font-size: 0.9rem;
    border-bottom: 2px solid #ddd;
  }

  .day-row {
    display: grid;
    grid-template-columns: 100px 1fr 200px;
    gap: 1rem;
    padding: 1rem;
    border-bottom: 1px solid #eee;
    transition: background-color 0.2s;
  }

  .day-row:hover {
    background-color: #fafafa;
  }

  .day-row:last-child {
    border-bottom: none;
  }

  .col-day {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .day-number {
    font-size: 1.5rem;
    font-weight: 600;
    color: #222;
    line-height: 1;
  }

  .day-name {
    font-size: 0.85rem;
    color: #999;
    text-transform: uppercase;
    margin-top: 0.25rem;
  }

  .col-controls {
    display: flex;
    align-items: center;
  }

  .col-domains {
    display: flex;
    align-items: center;
  }

  .monthly-reflection {
    margin-top: 2rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .header-top {
      flex-direction: column;
      gap: 1rem;
    }

    .notebook-title {
      font-size: 1.5rem;
    }
    .grid-header,
    .day-row {
      grid-template-columns: 60px 1fr;
      gap: 0.5rem;
      padding: 0.75rem;
    }

    .col-domains {
      grid-column: 1 / -1;
      margin-top: 0.5rem;
      padding-top: 0.5rem;
      border-top: 1px solid #f0f0f0;
    }

    .grid-header .col-domains {
      display: none;
    }

    .day-number {
      font-size: 1.25rem;
    }

    .day-name {
      font-size: 0.75rem;
    }
  }
</style>
