---
/**
 * Notebook Page - Monthly Notebook View
 * 
 * NEW: Calendar Grid Layout
 * - Visual month calendar for pattern recognition
 * - Click any day to expand full controls
 * - Maintains all existing functionality
 * - Responsive: collapses to week-view on mobile
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import MonthlyHeader from '../components/MonthlyHeader.svelte';
import NotebookCalendar from '../components/NotebookCalendar.svelte';
import MonthlyOutcomeSummary from '../components/MonthlyOutcomeSummary.svelte';
import DomainParticipationSummary from '../components/DomainParticipationSummary.svelte';
import TrendObservations from '../components/TrendObservations.svelte';
import MonthlyReflectionEditor from '../components/MonthlyReflectionEditor.svelte';
import MonthClosureButton from '../components/MonthClosureButton.svelte';
import { getCurrentMonth, getMonthMetadata, parseMonthKey, getTodayInfo } from '../lib/monthResolution';
import { getDaysInMonth } from '../lib/utils';

// Resolve active month from URL or default to current
const url = new URL(Astro.request.url);
const monthParam = url.searchParams.get('month');

const activeMonth = monthParam ? parseMonthKey(monthParam) || getCurrentMonth() : getCurrentMonth();
const metadata = getMonthMetadata(activeMonth);
const daysInMonth = getDaysInMonth(activeMonth.year, activeMonth.month);

// Get today info for highlighting
const today = getTodayInfo();
const todayDay = metadata.isCurrentMonth ? today.day : null;
---

<BaseLayout title="LifeLab - Notebook">
  <div class="notebook-view">
    <!-- Monthly Context Header -->
    <MonthlyHeader 
      client:load
      currentMonth={activeMonth}
      displayName={metadata.displayName}
      isCurrentMonth={metadata.isCurrentMonth}
      isFutureMonth={metadata.isFutureMonth}
    />

    <!-- Calendar Grid + Day Detail Panel -->
    <NotebookCalendar 
      client:load
      year={activeMonth.year}
      month={activeMonth.month}
      currentDay={todayDay}
    />

    <!-- Inline Analytics (Post-Notebook) -->
    <div class="analytics-section">
      <h2 class="section-title">Monthly Insights</h2>
      
      <MonthlyOutcomeSummary 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
      />

      <DomainParticipationSummary 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
        daysInMonth={daysInMonth}
      />

      <TrendObservations 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
      />
    </div>

    <!-- Monthly Reflection & Closure -->
    <div class="reflection-section">
      <MonthlyReflectionEditor 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
        initialReflection=""
      />

      <MonthClosureButton 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
        isClosed={false}
      />
    </div>
  </div>
</BaseLayout>

<style>
  .notebook-view {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #222;
    margin-bottom: 1.5rem;
  }

  /* Analytics Section */
  .analytics-section {
    margin: 3rem 0;
  }

  /* Reflection Section */
  .reflection-section {
    margin: 3rem 0 2rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .section-title { 
      font-size: 1rem; 
    }
  }
</style>

