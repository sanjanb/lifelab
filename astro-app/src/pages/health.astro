---
import BaseLayout from '../layouts/BaseLayout.astro';
import QuickEntryForm from '../components/QuickEntryForm.svelte';
import EntryHistoryList from '../components/EntryHistoryList.svelte';
import { getDomainById } from '../lib/config';

const domainId = 'health';
const domainConfig = getDomainById(domainId)!;
---

<BaseLayout title="LifeLab - Health">
  <div class="domain-view">
    <h2 class="domain-title">{domainConfig.displayName}</h2>
    <p class="domain-description">{domainConfig.description}</p>
    
    <div class="quick-entry-section">
      <h3>Quick Entry</h3>
      <QuickEntryForm 
        client:visible 
        domainId={domainId}
        domainConfig={domainConfig}
      />
    </div>
    
    <div class="history-section">
      <EntryHistoryList 
        client:visible 
        domainId={domainId}
        initialEntries={[]}
      />
    </div>
  </div>
</BaseLayout>

<style>
  .domain-view { padding: 0; }
  .domain-title { font-size: 1.75rem; margin-bottom: 0.5rem; }
  .domain-description { color: #666; margin-bottom: 2rem; }
  .quick-entry-section, .history-section { margin-bottom: 1.5rem; }
  .quick-entry-section h3, .history-section h3 { margin-bottom: 1rem; font-size: 1.25rem; }

  @media (max-width: 640px) {
    .domain-title { font-size: 1.375rem; }
    .domain-description { font-size: 0.9rem; margin-bottom: 1.5rem; }
    .quick-entry-section h3, .history-section h3 { font-size: 1.125rem; }
  }
</style>