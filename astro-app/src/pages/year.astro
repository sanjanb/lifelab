---
/**
 * Year View Page
 * 
 * MIGRATION NOTE: Phase M4.2 - Placeholder
 * Full year view implementation deferred to later phase
 */

import BaseLayout from '../layouts/BaseLayout.astro';

const currentYear = new Date().getFullYear();
---

<BaseLayout title="LifeLab - Year View">
  <div class="year-view">
    <h2 class="year-title">{currentYear} Year View</h2>
    <p class="year-description">Annual overview and patterns</p>
    
    <div class="placeholder-content">
      <div class="info-box">
        <h3>ðŸ“… Year View Coming Soon</h3>
        <p>This view will show:</p>
        <ul>
          <li>Week-by-week activity grid</li>
          <li>Domain filtering</li>
          <li>Year selection</li>
          <li>Activity heat map</li>
        </ul>
        <p class="note">Implementation planned for future phase</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .year-view {
    padding: 0;
  }

  .year-title {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }

  .year-description {
    color: #666;
    margin-bottom: 2rem;
  }

  .placeholder-content {
    display: flex;
    justify-content: center;
    padding: 3rem 0;
  }

  .info-box {
    max-width: 500px;
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .info-box h3 {
    margin-bottom: 1rem;
    color: #222;
  }

  .info-box ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .info-box li {
    margin-bottom: 0.5rem;
    color: #555;
  }

  .note {
    margin-top: 1.5rem;
    padding: 1rem;
    background: #f0f7ff;
    border-left: 3px solid #2196F3;
    color: #1565C0;
    font-size: 0.9rem;
  }
</style>
