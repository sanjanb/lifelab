---
/**
 * Home Page - Monthly Notebook View
 * 
 * HOME PAGE CONTRACT:
 * - Home page always represents the CURRENT MONTH
 * - No global dashboards
 * - No year-level summaries
 * - All content scoped to active month
 * 
 * PHASE H3: Monthly Notebook as Primary Surface
 * The notebook is the main interaction area.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import MonthlyHeader from '../components/MonthlyHeader.svelte';
import DailyActivityGraph from '../components/DailyActivityGraph.svelte';
import DailyRowControls from '../components/DailyRowControls.svelte';
import DomainPresenceBadges from '../components/DomainPresenceBadges.svelte';
import MonthlyReflectionEditor from '../components/MonthlyReflectionEditor.svelte';
import { getCurrentMonth, getMonthMetadata, parseMonthKey, getTodayInfo } from '../lib/monthResolution';
import { getDaysInMonth } from '../lib/utils';

// Resolve active month from URL or default to current
const url = new URL(Astro.request.url);
const monthParam = url.searchParams.get('month');

const activeMonth = monthParam ? parseMonthKey(monthParam) || getCurrentMonth() : getCurrentMonth();
const metadata = getMonthMetadata(activeMonth);
const daysInMonth = getDaysInMonth(activeMonth.year, activeMonth.month);

// Get today info for highlighting
const today = getTodayInfo();
const todayDay = metadata.isCurrentMonth ? today.day : null;

// Create array of days for rendering
const days = Array.from({ length: daysInMonth }, (_, i) => ({
  dayNumber: i + 1,
  dayName: new Date(activeMonth.year, activeMonth.month - 1, i + 1).toLocaleDateString('en-US', { weekday: 'short' }),
  date: new Date(activeMonth.year, activeMonth.month - 1, i + 1).toISOString().split('T')[0],
  isToday: metadata.isCurrentMonth && (i + 1) === today.day
}));

// Placeholder data for graph (will be populated by Svelte component)
const dailyCounts = Array(daysInMonth).fill(0);
---

<BaseLayout title="LifeLab - Home">
  <div class="home-view">
    <!-- Phase H2: Monthly Context + Line Graph -->
    <MonthlyHeader 
      client:load
      currentMonth={activeMonth}
      displayName={metadata.displayName}
      isCurrentMonth={metadata.isCurrentMonth}
      isFutureMonth={metadata.isFutureMonth}
    />

    <DailyActivityGraph 
      client:visible
      dailyCounts={dailyCounts}
      daysInMonth={daysInMonth}
      currentDay={todayDay}
    />

    <!-- Phase H3: Monthly Notebook (Primary Surface) -->
    <div class="notebook-section">
      <h2 class="section-title">Daily Rows</h2>
      
      <div class="daily-rows">
        <div class="grid-header">
          <div class="col-day">Day</div>
          <div class="col-controls">Intent / Quality / Outcome</div>
          <div class="col-domains">Active Domains</div>
        </div>

        {days.map((day) => (
          <div 
            class:list={['day-row', { 'day-row-today': day.isToday }]} 
            data-day={day.dayNumber}
          >
            <div class="col-day">
              <div class="day-number">{day.dayNumber}</div>
              <div class="day-name">{day.dayName}</div>
              {day.isToday && <div class="today-badge">Today</div>}
            </div>

            <div class="col-controls">
              <DailyRowControls 
                client:visible
                year={activeMonth.year}
                month={activeMonth.month}
                dayNumber={day.dayNumber}
                initialData={{}}
              />
            </div>

            <div class="col-domains">
              <DomainPresenceBadges 
                client:visible
                dayNumber={day.dayNumber}
                activeDomains={[]}
              />
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Phase H5: Monthly Reflection -->
    <div class="reflection-section">
      <MonthlyReflectionEditor 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
        initialReflection=""
      />
    </div>
  </div>
</BaseLayout>

<style>
  .home-view {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Phase H3: Notebook Section */
  .notebook-section {
    margin: 3rem 0;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #222;
    margin-bottom: 1.5rem;
  }

  .daily-rows {
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }

  .grid-header {
    display: grid;
    grid-template-columns: 100px 1fr 200px;
    gap: 1rem;
    padding: 1rem;
    background-color: #f9f9f9;
    border-bottom: 2px solid #eee;
    font-weight: 600;
    font-size: 0.875rem;
    color: #666;
  }

  .day-row {
    display: grid;
    grid-template-columns: 100px 1fr 200px;
    gap: 1rem;
    padding: 1rem;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.2s;
  }

  .day-row:last-child {
    border-bottom: none;
  }

  .day-row:hover {
    background-color: #fafafa;
  }

  .day-row-today {
    background-color: #fffbf0;
    border-left: 3px solid #ffd700;
  }

  .day-row-today:hover {
    background-color: #fff9e6;
  }

  .col-day {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    position: relative;
  }

  .day-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #222;
    line-height: 1;
  }

  .day-name {
    font-size: 0.875rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .today-badge {
    background: #ffd700;
    color: #222;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    width: fit-content;
    margin-top: 0.25rem;
  }

  .col-controls {
    display: flex;
    align-items: center;
  }

  .col-domains {
    display: flex;
    align-items: center;
  }

  /* Phase H5: Reflection Section */
  .reflection-section {
    margin: 3rem 0 2rem;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .section-title { font-size: 1.0625rem; }
    .grid-header, .day-row { gap: 0.875rem; padding: 0.875rem; }
  }

  @media (max-width: 768px) {
    .grid-header, .day-row { 
      grid-template-columns: 80px 1fr; 
      gap: 0.75rem; 
      padding: 0.75rem; 
    }
    
    .col-domains { 
      grid-column: 1 / -1; 
      margin-top: 0.5rem; 
      padding-top: 0.5rem; 
      border-top: 1px solid #f0f0f0; 
    }
    
    .grid-header .col-domains {
      display: none;
    }

    .day-number { font-size: 1.25rem; }
    .day-name { font-size: 0.8125rem; }
    .today-badge { font-size: 0.6875rem; }
  }

  @media (max-width: 640px) {
    .section-title { font-size: 1rem; }
    .grid-header, .day-row { gap: 0.5rem; padding: 0.625rem; }
    .day-number { font-size: 1.125rem; }
  }
</style>
