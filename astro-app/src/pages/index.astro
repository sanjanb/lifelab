---
/**
 * Home Page - Insight-First Redesign
 * 
 * DESIGN PHILOSOPHY:
 * - Home page is an INSIGHT LAYER, not a control panel
 * - Shows understanding before action
 * - Visualizations over tables
 * - Observational not evaluative
 * 
 * WHAT HOME PAGE DOES:
 * - Explain the month in under 5 seconds
 * - Show temporal flow (line graph)
 * - Show distribution (heatmap)
 * - Surface notable patterns (text observations)
 * 
 * WHAT HOME PAGE DOES NOT DO:
 * - No data entry (that's in /notebook)
 * - No editing (read-only view)
 * - No scoring or grading
 * - No streak tracking
 * - No goal setting
 * 
 * Navigation: Click "Notebook" to add/edit entries
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import InsightContainer from '../components/InsightContainer.svelte';
import { getCurrentMonth, getTodayInfo } from '../lib/monthResolution';

// Home page always shows current month
const activeMonth = getCurrentMonth();
const today = getTodayInfo();

// Month display
const monthName = new Date(activeMonth.year, activeMonth.month - 1).toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
---

<BaseLayout title="LifeLab - Home">
  <div class="insight-home">
    <!-- Page Header -->
    <header class="page-header">
      <h1 class="page-title">LifeLab</h1>
      <p class="page-subtitle">
        {monthName} • 
        <a href="/notebook" class="edit-link">Edit in Notebook →</a>
      </p>
    </header>

    <!-- Insight visualizations loaded client-side -->
    <InsightContainer 
      client:load
      year={activeMonth.year}
      month={activeMonth.month}
      currentDay={today.day}
    />

    <!-- Navigation Hint -->
    <div class="nav-hint">
      <p>
        This page shows insights only. 
        To add or edit entries, visit <a href="/notebook">Notebook</a>.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .insight-home {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Page Header */
  .page-header {
    margin-bottom: 3rem;
    text-align: center;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 0.5rem 0;
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    margin: 0;
  }

  .edit-link {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.15s ease;
  }

  .edit-link:hover {
    color: #2563eb;
    text-decoration: underline;
  }

  /* Navigation Hint */
  .nav-hint {
    margin: 3rem 0 2rem 0;
    padding: 1.25rem;
    background: #fffbeb;
    border: 1px solid #fbbf24;
    border-radius: 6px;
    text-align: center;
  }

  .nav-hint p {
    margin: 0;
    font-size: 0.9375rem;
    color: #92400e;
    line-height: 1.6;
  }

  .nav-hint a {
    color: #92400e;
    font-weight: 600;
    text-decoration: underline;
  }

  .nav-hint a:hover {
    color: #78350f;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .insight-home {
      padding: 1rem 0.75rem;
    }

    .page-header {
      margin-bottom: 2rem;
    }

    .page-title {
      font-size: 2rem;
    }

    .page-subtitle {
      font-size: 1rem;
    }
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: 1.75rem;
    }
  }
</style>
