---
/**
 * Home Page - Insight-First Redesign
 * 
 * DESIGN PHILOSOPHY:
 * - Home page is an INSIGHT LAYER, not a control panel
 * - Shows understanding before action
 * - Visualizations over tables
 * - Observational not evaluative
 * 
 * WHAT HOME PAGE DOES:
 * - Explain the month in under 5 seconds
 * - Show temporal flow (line graph)
 * - Show distribution (heatmap)
 * - Surface notable patterns (text observations)
 * 
 * WHAT HOME PAGE DOES NOT DO:
 * - No data entry (that's in /notebook)
 * - No editing (read-only view)
 * - No scoring or grading
 * - No streak tracking
 * - No goal setting
 * 
 * Navigation: Click "Notebook" to add/edit entries
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import InsightLineGraph from '../components/InsightLineGraph.svelte';
import InsightHeatmap from '../components/InsightHeatmap.svelte';
import InsightObservations from '../components/InsightObservations.svelte';
import { getCurrentMonth, getTodayInfo } from '../lib/monthResolution';
import { getMonthlyNotebook } from '../lib/storage';
import { buildMonthlyInsight, getSignalArray, getHeatmapMatrix } from '../lib/monthlyInsight';
import { generateInsightObservations, getMonthSummary } from '../lib/insightText';

// Home page always shows current month
const activeMonth = getCurrentMonth();
const today = getTodayInfo();

// Build monthly insight data from storage
let monthlyNotebook;
let insight;
let observations = [];
let monthSummary = '';

// Browser-safe data loading
if (typeof window !== 'undefined' && typeof localStorage !== 'undefined') {
  // This will be hydrated on client
  monthlyNotebook = null;
  insight = null;
} else {
  // Server-side: create empty structure
  monthlyNotebook = {
    year: activeMonth.year,
    month: activeMonth.month,
    days: {}
  };
  
  // Transform notebook data to daily rows
  const daysInMonth = new Date(activeMonth.year, activeMonth.month, 0).getDate();
  const dailyRows = Array.from({ length: daysInMonth }, (_, i) => {
    const dayNumber = i + 1;
    const date = new Date(activeMonth.year, activeMonth.month - 1, dayNumber).toISOString().split('T')[0];
    const dayData = monthlyNotebook.days[dayNumber] || {};
    
    return {
      date,
      domains: dayData.domains || []
    };
  });
  
  // Build insight structure
  insight = buildMonthlyInsight(activeMonth.year, activeMonth.month, dailyRows);
  observations = generateInsightObservations(insight);
  monthSummary = getMonthSummary(insight);
}

// Data for components
const days = insight?.days || [];
const domains = insight?.domains || [];
const signalArray = insight ? getSignalArray(insight) : [];
const heatmapMatrix = insight ? getHeatmapMatrix(insight) : [];
const currentDay = today.day;
---

<BaseLayout title="LifeLab - Home">
  <div class="home-view">
    <!-- Phase H2: Monthly Context + Line Graph -->
    <MonthlyHeader 
      client:load
      currentMonth={activeMonth}
      displayName={metadata.displayName}
      isCurrentMonth={metadata.isCurrentMonth}
      isFutureMonth={metadata.isFutureMonth}
    />

    <DailyActivityGraph 
      client:visible
      dailyCounts={dailyCounts}
      daysInMonth={daysInMonth}
      currentDay={todayDay}
    />

    <!-- Phase H3: Monthly Notebook (Primary Surface) -->
    <div class="notebook-section">
      <h2 class="section-title">Daily Rows</h2>
      
      <div class="daily-rows">
        <div class="grid-header">
          <div class="col-day">Day</div>
          <div class="col-controls">Intent / Quality / Outcome</div>
          <div class="col-domains">Active Domains</div>
        </div>

        {days.map((day) => (
          <div 
            class:list={['day-row', { 'day-row-today': day.isToday }]} 
            data-day={day.dayNumber}
          >
            <div class="col-day">
              <div class="day-number">{day.dayNumber}</div>
              <div class="day-name">{day.dayName}</div>
              {day.isToday && <div class="today-badge">Today</div>}
            </div>

            <div class="col-controls">
              <DailyRowControls 
                client:visible
                year={activeMonth.year}
                month={activeMonth.month}
                dayNumber={day.dayNumber}
                initialData={{}}
              />
            </div>

            <div class="col-domains">
              <DomainPresenceBadges 
                client:visible
                dayNumber={day.dayNumber}
                activeDomains={[]}
              />
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Phase H4: Inline Analytics (Post-Notebook) -->
    <div class="analytics-section">
      <h2 class="section-title">Monthly Insights</h2>
      
      <MonthlyOutcomeSummary 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
      />

      <DomainParticipationSummary 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
        daysInMonth={daysInMonth}
      />

      <TrendObservations 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
      />
    </div>

    <!-- Phase H5: Monthly Reflection -->
    <div class="reflection-section">
      <MonthlyReflectionEditor 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
        initialReflection=""
      />

      <MonthClosureButton 
        client:visible
        year={activeMonth.year}
        month={activeMonth.month}
        isClosed={metadata.isClosed}
      />
    </div>
  </div>
</BaseLayout>

<style>
  .home-view {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Phase H3: Notebook Section */
  .notebook-section {
    margin: 3rem 0;
  }

  /* Phase H4: Analytics Section */
  .analytics-section {
    margin: 3rem 0;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #222;
    margin-bottom: 1.5rem;
  }

  .daily-rows {
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }

  .grid-header {
    display: grid;
    grid-template-columns: 100px 1fr 200px;
    gap: 1rem;
    padding: 1rem;
    background-color: #f9f9f9;
    border-bottom: 2px solid #eee;
    font-weight: 600;
    font-size: 0.875rem;
    color: #666;
  }

  .day-row {
    display: grid;
    grid-template-columns: 100px 1fr 200px;
    gap: 1rem;
    padding: 1rem;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.2s;
  }

  .day-row:last-child {
    border-bottom: none;
  }

  .day-row:hover {
    background-color: #fafafa;
  }

  .day-row-today {
    background-color: #fffbf0;
    border-left: 3px solid #ffd700;
  }

  .day-row-today:hover {
    background-color: #fff9e6;
  }

  .col-day {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    position: relative;
  }

  .day-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #222;
    line-height: 1;
  }

  .day-name {
    font-size: 0.875rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .today-badge {
    background: #ffd700;
    color: #222;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    width: fit-content;
    margin-top: 0.25rem;
  }

  .col-controls {
    display: flex;
    align-items: center;
  }

  .col-domains {
    display: flex;
    align-items: center;
  }

  /* Phase H5: Reflection Section */
  .reflection-section {
    margin: 3rem 0 2rem;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .section-title { font-size: 1.0625rem; }
    .grid-header, .day-row { gap: 0.875rem; padding: 0.875rem; }
  }

  @media (max-width: 768px) {
    .grid-header, .day-row { 
      grid-template-columns: 80px 1fr; 
      gap: 0.75rem; 
      padding: 0.75rem; 
    }
    
    .col-domains { 
      grid-column: 1 / -1; 
      margin-top: 0.5rem; 
      padding-top: 0.5rem; 
      border-top: 1px solid #f0f0f0; 
    }
    
    .grid-header .col-domains {
      display: none;
    }

    .day-number { font-size: 1.25rem; }
    .day-name { font-size: 0.8125rem; }
    .today-badge { font-size: 0.6875rem; }
  }

  @media (max-width: 640px) {
    .section-title { font-size: 1rem; }
    .grid-header, .day-row { gap: 0.5rem; padding: 0.625rem; }
    .day-number { font-size: 1.125rem; }
  }
</style>
