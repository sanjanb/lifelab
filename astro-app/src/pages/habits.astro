---
/**
 * Habits Domain Page
 * 
 * MIGRATION NOTE: Phase M4.1 - Now includes interactive Svelte islands
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import QuickEntryForm from '../components/QuickEntryForm.svelte';
import EntryHistoryList from '../components/EntryHistoryList.svelte';
import { getDomainById } from '../lib/config';

const domainId = 'habits';
const domainConfig = getDomainById(domainId);

if (!domainConfig) {
  throw new Error(`Domain ${domainId} not found`);
}
---

<BaseLayout title="LifeLab - Habits">
  <div class="domain-view">
    <h2 class="domain-title">{domainConfig.displayName}</h2>
    <p class="domain-description">{domainConfig.description}</p>
    
    <div class="quick-entry-section">
      <h3>Quick Entry</h3>
      <QuickEntryForm 
        client:visible 
        domainId={domainId}
        domainConfig={domainConfig}
      />
    </div>
    
    <div class="history-section">
      <EntryHistoryList 
        client:visible 
        domainId={domainId}
        initialEntries={[]}
      />
    </div>
  </div>
</BaseLayout>

<style>
  .domain-view {
    padding: 0;
  }
  
  .domain-title {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }
  
  .domain-description {
    color: #666;
    margin-bottom: 2rem;
  }
  
  .quick-entry-section,
  .history-section {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    border: 1px solid #ddd;
  }
  
  .quick-entry-section h3,
  .history-section h3 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  /* Responsive design */
  @media (max-width: 640px) {
    .domain-title {
      font-size: 1.375rem;
    }

    .domain-description {
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }

    .quick-entry-section,
    .history-section {
      padding: 1.25rem;
      margin-bottom: 1.25rem;
    }

    .quick-entry-section h3,
    .history-section h3 {
      font-size: 1.125rem;
    }
  }
</style>
